{
  "realm": "event-ticketing",
  "enabled": true,
  "displayName": "Event Ticketing Platform",
  "registrationAllowed": true,
  "registrationEmailAsUsername": true,
  "rememberMe": true,
  "verifyEmail": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  
  "smtpServer": {
    "host": "smtp.gmail.com",
    "port": "587",
    "from": "noreply@eventtickets.local",
    "fromDisplayName": "Event Ticketing Platform",
    "ssl": "false",
    "starttls": "true",
    "auth": "false",
    "user": "",
    "password": ""
  },

  "roles": {
    "realm": [
      {
        "name": "system-admin",
        "description": "Platform administrators who can approve events and manage system"
      },
      {
        "name": "event-organizer", 
        "description": "Users who can create and manage events"
      },
      {
        "name": "ticket-buyer",
        "description": "Regular users who can buy tickets"
      },
      {
        "name": "scanner",
        "description": "Staff who can scan QR codes at events"
      }
    ]
  },

  "defaultRoles": ["ticket-buyer"],

  "clients": [
    {
      "clientId": "event-frontend",
      "name": "Event Ticketing Frontend",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:3001/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:3001"
      ],
      "protocol": "openid-connect",
      "attributes": {
        "pkce.code.challenge.method": "S256"
      }
    },
    {
      "clientId": "events-service",
      "name": "Events Microservice",
      "enabled": true,
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": true,
      "secret": "events-service-secret-change-in-prod"
    },
    {
      "clientId": "tickets-service", 
      "name": "Tickets Microservice",
      "enabled": true,
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": true,
      "secret": "tickets-service-secret-change-in-prod"
    },
    {
      "clientId": "payments-service",
      "name": "Payments Microservice", 
      "enabled": true,
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": true,
      "secret": "payments-service-secret-change-in-prod"
    }
  ],

  "users": [
    {
      "username": "admin@yopmail.com",
      "email": "admin@yopmail.com",
      "firstName": "System",
      "lastName": "Admin",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["system-admin", "event-organizer", "ticket-buyer"]
    },
    {
      "username": "organizer@yopmail.com",
      "email": "organizer@yopmail.com", 
      "firstName": "Event",
      "lastName": "Organizer",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "organizer123",
          "temporary": false
        }
      ],
      "realmRoles": ["event-organizer", "ticket-buyer"]
    },
    {
      "username": "buyer@yopmail.com",
      "email": "buyer@yopmail.com",
      "firstName": "Ticket", 
      "lastName": "Buyer",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "buyer123",
          "temporary": false
        }
      ],
      "realmRoles": ["ticket-buyer"]
    }
  ]
}