# templates/nginx.conf.j2

server {
    listen 80;
    server_name {{ keycloak_domain }};

    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name {{ keycloak_domain }};

    # These paths are now managed by Ansible as the source of truth
    ssl_certificate /etc/letsencrypt/live/{{ keycloak_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ keycloak_domain }}/privkey.pem;
    
    {% if cert_file_status.stat.exists %}
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    {% endif %}

    location / {
        proxy_pass http://localhost:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Your security headers - MAKE FUTURE CHANGES HERE
        add_header X-Content-Type-Options "nosniff" always;
        add_header Referrer-Policy "no-referrer-when-downgrade" always;
    }
}