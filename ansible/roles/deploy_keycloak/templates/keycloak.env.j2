# Database Configuration
KC_DB=postgres
KC_DB_URL={{ keycloak_db_url }}
KC_DB_USERNAME={{ rds_postgres_user }}
KC_DB_PASSWORD={{ rds_postgres_password }}

# Admin Configuration
KC_BOOTSTRAP_ADMIN_USERNAME={{ keycloak_admin_user }}
KC_BOOTSTRAP_ADMIN_PASSWORD={{ keycloak_admin_password }}
        
# Hostname v2 + Proxy Configuration (behind HTTPS-terminating NGINX)
KC_HOSTNAME=auth.dpiyumal.me
KC_HOSTNAME_URL=https://auth.dpiyumal.me
KC_HOSTNAME_ADMIN_URL=https://auth.dpiyumal.me
KC_PROXY_HEADERS=xforwarded

# Production optimizations
KC_HTTP_ENABLED=true
KC_CACHE=ispn
KC_HEALTH_ENABLED=true
JAVA_OPTS_APPEND=-Xms256m -Xmx512m