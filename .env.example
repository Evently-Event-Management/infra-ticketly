# Environment variables for local development
# Copy this file to .env and customize as needed

# Docker sock
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Database connection information for production
# (not needed for local dev - will use local ticketly-db)
DATABASE_ADDRESS=jdbc:postgresql://localhost:5432/ticketly
RDS_ENDPOINT=localhost:5432
DATABASE_USERNAME=ticketly
DATABASE_PASSWORD=ticketly

# AWS Configuration
AWS_REGION=ap-south-1
AWS_SQS_SESSION_SCHEDULING_ARN=arn:aws:sqs:ap-south-1:000000000000:ticketly-session-scheduling-queue
AWS_SQS_SESSION_SCHEDULING_URL=https://sqs.ap-south-1.amazonaws.com/000000000000/ticketly-session-scheduling-queue
AWS_SCHEDULER_ROLE_ARN=arn:aws:iam::000000000000:role/scheduler-role
AWS_SCHEDULER_GROUP_NAME=ticketly-event-scheduler
AWS_S3_BUCKET_NAME=ticketly-event-images

# Client Secrets for service-to-service communication
SCHEDULER_CLIENT_SECRET=scheduler-client-secret
EVENTS_SERVICE_CLIENT_SECRET=events-service-client-secret
EVENT_PROJECTION_CLIENT_SECRET=event-projection-client-secret
TICKET_CLIENT_SECRET=ticket-client-secret
